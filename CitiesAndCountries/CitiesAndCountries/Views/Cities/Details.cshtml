@model CityViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container" style="text-align:center">
    <h2>@Model.Name</h2>

    <div class="row" style="width:20rem; margin: auto;">
        <img src="@Model.ImageUrl" style="margin-left:auto; margin-right:auto;" />
    </div>

    <div class="row">
        <h5 class="font-weight-light mb-1"><b class="font-weight-bold"></b> <i>Population: @Model.Population</i></h5>
    </div>

    <hr class="mt-2 mb-3" style="height:3px;border:none;" />

    <div class="font-weight-light">
        <h4 class="text-left font-weight-bold" style="font-size:large">Country:</h4>

        <div class="list-group">
            <h5>@Model.CountryName</h5>
            @if (Model.CountryId != -1)
            {
                <a asp-controller="Countries" asp-action="Details" asp-route-id="@Model.CountryId" class="font-weight-light">link</a>
            }
        </div>

        <hr class="mb-2" style="height:3px;border:none;" />
    </div>

    @if (this.User.Identity.IsAuthenticated)
    {
        <a asp-area="" asp-controller="Cities" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-area="" asp-controller="Cities" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    }
</div>